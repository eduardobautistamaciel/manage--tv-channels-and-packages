@using Dominio;

@{
    ViewBag.Title = "Login";
}
<h2>Login</h2>

<div style="padding:16px">

    @if (ViewBag.Mensaje != null)
    {
        <div class="alert alert-danger">
            @ViewBag.Mensaje
        </div>
    }

    @if (ViewBag.Msj != null)
    {
        <div class="alert alert-success">
            @ViewBag.Msj
        </div>
    }

    <form action="/usuario/login" method="post">

        <div class="form-group">
            <label for="cedula">Cedula</label>
            <input type="text" id="nombre" class="form-control" name="cedula" required placeholder="Ingrese Cedula" />
        </div>

        <div class="form-group">
            <label for="contrasenia">Contraseña</label>
            <input type="password" id="contrasenia" class="form-control" name="contrasenia" required placeholder="Ingrese Contraseña" />
        </div>

        <button class="btn btn-primary" style="margin:5px" type="submit">Acceder</button>
        <a href="">Olvido su contraseña?</a>
    </form>

    @if ((string)Session["LogueadoRol"] == "Operador")
    {
        <form action="/usuario/operador">
            <button class="btn btn-secondary" style="margin:5px" type="submit">Volver</button>
        </form>
    }
    else
    {
        <form action="/paquete/index">
            <button class="btn btn-secondary" style="margin:5px" type="submit">Volver</button>
        </form>
    }
</div>

