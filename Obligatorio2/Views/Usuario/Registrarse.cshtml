
@using Dominio


@{
    ViewBag.Title = "Registrarse";
}

<h2>Registrarse</h2>

<div style="padding:16px">
    @if (@ViewBag.Mensaje != null)
    {
        <div class="alert alert-danger">
            @ViewBag.Mensaje
        </div>
    }


    <form id="formulario" action="/usuario/registrarse" method="post">

        <div class="form-group">
            <label for="cedula">Cedula</label>
            <input type="text" id="cedula" class="form-control" name="cedula" required placeholder="Ingrese Cedula" />
        </div>


        <div class="form-group">
            <label for="nombre">Nombre</label>
            <input type="text" id="nombre" class="form-control" name="nombre" required placeholder="Ingrese Nombre" />
        </div>

        <div class="form-group">
            <label for="apellido">Apellido</label>
            <input type="text" id="apellido" class="form-control" name="apellido" required placeholder="Ingrese Apellido" />
        </div>


        <div class="form-group">
            <label for="contrasenia">Contraseña</label>
            <input type="password" id="contrasenia" class="form-control" name="contrasenia" required placeholder="Ingrese Contraseña" />
        </div>

        <button type="submit" class="btn btn-primary" style="margin:5px" >Registrarse</button>
    </form>

    <form action="/paquete/index">
        <button class="btn btn-secondary" style="margin:5px" type="submit">Volver</button>
    </form>
</div>